<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row">
  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3>Your Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/dashboard/edit/{{post.id}}">{{post.title}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<div class="form-group">
<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ New Post</a></button>
</div>

<script src="./js/dashboard.js"></script>
