<div class="text-center blog-post" data-id="{{id}}">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Posted by {{user.name}} on {{format_date date_posted}}</p>
</div>


{{#if logged_in}}
    <div class="submit-comment">
    <form class="form">
        <div class="form-group">
            <label for="comment-content">Comment:</label>
            <input class="form-input" type="text" id="comment-content" name="comment-content" data-id="{{id}}">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Comment</button>
        </div>
    </form>
</div>
{{/if}}


{{#if comments.length}}
    {{> comment}}
{{/if}}


{{#if logged_in}}
    <script src="/js/comment.js"></script>
{{/if}}

