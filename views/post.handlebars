<div class="text-center blog-post" data-id="{{id}}">
    <div class="post-title">
        <h2 class="title">{{title}}</h2>
        <h3 class="comment posted_by">Posted by {{user.name}} on {{format_date date_posted}}</h3>
    </div>
    <p class="comment">{{content}}</p>
</div>


{{#if logged_in}}
<div class="submit-comment">
    <form class="form add-comment">
        <div class="form-group">
            <label for="comment-content">Comment:</label>
            <input class="form-input" type="text" id="comment-content" name="comment-content" data-id="{{id}}">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Comment</button>
        </div>
    </form>
</div>
{{/if}}


{{#if comments.length}}
{{> comment}}
{{/if}}


{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}