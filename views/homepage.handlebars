<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="mb-4 post">
  <div>
    <h2>
      <div class="post-title">
        <a href="/post/{{post.id}}">{{post.title}}</a>
        <h3 class="posted_by">Posted by {{post.user.name}} on {{format_date post.date_posted}}</h3>
      </div>
    </h2>
    <div>
      <p>
        {{post.content}}
      </p>
    </div>
  </div>

</div>
{{/each}}